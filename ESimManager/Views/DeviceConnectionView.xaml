<UserControl x:Class="ESimManager.Views.DeviceConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource PrimaryBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Device Connection" 
                  FontSize="24" FontWeight="Bold"
                  Foreground="{StaticResource PrimaryText}"
                  Margin="0,0,0,20"/>

        <!-- Connection Type Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Select Connection Type:" 
                      Foreground="{StaticResource PrimaryText}"
                      FontSize="14" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="WLAN" 
                            GroupName="ConnectionType"
                            Foreground="{StaticResource PrimaryText}"
                            Margin="0,0,20,0"
                            IsChecked="{Binding SelectedConnectionType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=WLAN}"/>
                <RadioButton Content="Bluetooth" 
                            GroupName="ConnectionType"
                            Foreground="{StaticResource PrimaryText}"
                            IsChecked="{Binding SelectedConnectionType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Bluetooth}"/>
            </StackPanel>
            
            <Button Content="Discover Devices" 
                   Style="{StaticResource ModernButton}"
                   Command="{Binding DiscoverDevicesCommand}"
                   Margin="0,15,0,0"
                   Width="150"
                   HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Device List -->
        <Border Grid.Row="2" 
               Background="{StaticResource SecondaryBackground}"
               BorderBrush="{StaticResource BorderColor}"
               BorderThickness="1"
               CornerRadius="4"
               Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Available Devices" 
                          Foreground="{StaticResource PrimaryText}"
                          FontSize="16" FontWeight="Bold"
                          Margin="0,0,0,10"/>

                <ListBox Grid.Row="1"
                        ItemsSource="{Binding AvailableDevices}"
                        SelectedItem="{Binding SelectedDevice}"
                        Style="{StaticResource ModernListBox}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}" 
                                          Foreground="{StaticResource PrimaryText}"
                                          FontWeight="Bold"/>
                                <TextBlock Text="{Binding ConnectionType}" 
                                          Foreground="{StaticResource SecondaryText}"
                                          FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Status and Actions -->
        <StackPanel Grid.Row="3" Margin="0,20,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="{StaticResource SecondaryText}"
                      FontSize="14"
                      Margin="0,0,0,15"/>
            
            <StackPanel Orientation="Horizontal">
                <Button Content="Connect Device" 
                       Style="{StaticResource ModernButton}"
                       Command="{Binding ConnectDeviceCommand}"
                       IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"
                       Margin="0,0,10,0"/>
                <Button Content="Disconnect" 
                       Style="{StaticResource ModernButton}"
                       Command="{Binding DisconnectDeviceCommand}"
                       IsEnabled="{Binding IsConnected}"
                       Background="#DC3545"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
