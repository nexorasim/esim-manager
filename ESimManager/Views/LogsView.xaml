<UserControl x:Class="ESimManager.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource PrimaryBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="System Logs" 
                      FontSize="24" FontWeight="Bold"
                      Foreground="{StaticResource PrimaryText}"/>
            <Button Content="Clear Logs" 
                   Style="{StaticResource ModernButton}"
                   Command="{Binding ClearLogsCommand}"
                   Margin="20,0,0,0"
                   Padding="10,5"
                   Background="#DC3545"/>
        </StackPanel>

        <!-- Log List -->
        <Border Grid.Row="1" 
               Background="{StaticResource SecondaryBackground}"
               BorderBrush="{StaticResource BorderColor}"
               BorderThickness="1"
               CornerRadius="4"
               Padding="15">
            <DataGrid ItemsSource="{Binding Logs}"
                     AutoGenerateColumns="False"
                     Background="{StaticResource TertiaryBackground}"
                     Foreground="{StaticResource PrimaryText}"
                     BorderThickness="0"
                     GridLinesVisibility="None"
                     HeadersVisibility="Column"
                     IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='HH:mm:ss'}" Width="100"/>
                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Log Statistics -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
            <TextBlock Text="{Binding Logs.Count, StringFormat='Total Entries: {0}'}" 
                      Foreground="{StaticResource SecondaryText}"
                      FontSize="12"/>
        </StackPanel>
    </Grid>
</UserControl>
