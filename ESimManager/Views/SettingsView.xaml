<UserControl x:Class="ESimManager.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource PrimaryBackground}">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Settings" 
                      FontSize="24" FontWeight="Bold"
                      Foreground="{StaticResource PrimaryText}"
                      Margin="0,0,0,30"/>

            <Border Background="{StaticResource SecondaryBackground}"
                   BorderBrush="{StaticResource BorderColor}"
                   BorderThickness="1"
                   CornerRadius="4"
                   Padding="20"
                   Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Connection Settings" 
                              FontSize="16" FontWeight="Bold"
                              Foreground="{StaticResource PrimaryText}"
                              Margin="0,0,0,15"/>
                    
                    <CheckBox Content="Auto-connect to last device" 
                             Foreground="{StaticResource PrimaryText}"
                             Margin="0,5"/>
                    <CheckBox Content="Enable offline recovery mode" 
                             Foreground="{StaticResource PrimaryText}"
                             Margin="0,5"/>
                </StackPanel>
            </Border>

            <Border Background="{StaticResource SecondaryBackground}"
                   BorderBrush="{StaticResource BorderColor}"
                   BorderThickness="1"
                   CornerRadius="4"
                   Padding="20">
                <StackPanel>
                    <TextBlock Text="Enterprise Configuration" 
                              FontSize="16" FontWeight="Bold"
                              Foreground="{StaticResource PrimaryText}"
                              Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Configuration Server:" 
                              Foreground="{StaticResource PrimaryText}"
                              Margin="0,5"/>
                    <TextBox Style="{StaticResource ModernTextBox}"
                            Text="https://config.nexorasim.com"
                            Margin="0,5,0,15"/>
                    
                    <Button Content="Save Settings" 
                           Style="{StaticResource ModernButton}"
                           Width="150"
                           HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
